<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzleimg2"
    android:backgroundTintMode="src_in"
    tools:context=".Puzzle_Game">

    <Button
        android:id="@+id/button1"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="John Wick"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:alpha="5"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="Iron Man"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/cricket"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:layout_marginTop="77dp"
        android:alpha="5"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="Cricket"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nature" />

    <Button
        android:id="@+id/nature"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:layout_marginTop="78dp"
        android:alpha="5"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="Nature"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messi" />

    <Button
        android:id="@+id/messi"
        android:layout_width="189dp"
        android:layout_height="62dp"

        android:layout_marginTop="75dp"
        android:alpha="5"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="Messi"

        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carBut" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="312dp"
        android:layout_height="66dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="50dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="Puzzles Available"
        android:textColor="#FFC107"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainact3"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:alpha="5"
        android:background="@drawable/selectbtn2"
        android:fontFamily="@font/bangers"
        android:text="Main Menu"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/carBut"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:layout_marginTop="77dp"
        android:alpha="5"
        android:background="@drawable/newbtn"
        android:fontFamily="@font/bangers"
        android:text="Dodge Car"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />
</androidx.constraintlayout.widget.ConstraintLayout>