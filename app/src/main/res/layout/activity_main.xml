<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iaas1"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/mathgame"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="Math Game"
        android:textColor="#FFEB3B"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/game15"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="Game of 15"
        android:textColor="#FFEB3B"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <Button
        android:id="@+id/tiktak"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="Tic Tac Toe"
        android:textColor="#FFEB3B"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Button
        android:id="@+id/puzzle"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="Puzzles"
        android:textColor="#FFEB3B"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />

    <Button
        android:id="@+id/memorybtn"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="Memory game"
        android:textColor="#FFEB3B"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:fontFamily="@font/bangers"
        android:text="   BRAIN TRAINER"
        android:textColor="#FFEB3B"
        android:textSize="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/aboutus"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/bangers"
        android:text="About us"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />
</androidx.constraintlayout.widget.ConstraintLayout>